{
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "build": "turbo run build",
    "build:site": "npm run build && npm run copy-site",
    "copy-site": "node scripts/build-site.js",
    "build:archive": "gulp createCoreDistArchive",
    "update-unpkg-links": "gulp updateUnpkgLinks",
    "update-plugin-versions": "gulp updatePluginVersions",
    "prepare": "node -e 'process.exit(+!process.env.CI)' || (husky install && npm run build)",
    "a-prepare": "husky install && npm run build)",
    "tsc": "turbo tsc",
    "changeset": "changeset",
    "changeset:version": "changeset version && npm install && npm run update-unpkg-links && npm run update-plugin-versions",
    "changeset:publish": "npm run build && changeset publish",
    "docs:deploy": "poetry install --no-root && poetry run mike deploy -u",
    "docs:serve": "poetry install --no-root && poetry run mike serve",
    "predeploy": "npm run build:site",
    "deploy": "node scripts/deploy-gh-pages.js",
    "deploy:gh-pages": "gh-pages -d site --dotfiles --git git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "packageManager": "npm@8.3.1",
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.7",
    "@changesets/cli": "^2.25.2",
    "@jspsych/config": "^3.2.1",
    "gh-pages": "^6.3.0",
    "husky": "^8.0.3",
    "import-sort-style-module": "^6.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "prettier-plugin-import-sort": "^0.0.7",
    "turbo": "^1.6.3"
  },
  "overrides": {
    "typescript": "^5.0.0"
  },
  "prettier": {
    "printWidth": 100
  },
  "importSort": {
    ".ts, .js, .mjs, .cjs": {
      "style": "module",
      "parser": "typescript"
    }
  },
  "lint-staged": {
    "*.{ts,js,mjs,cjs}": "prettier --write"
  },
  "jest": {
    "projects": [
      "<rootDir>/packages/*/jest.config.cjs"
    ]
  }
}
